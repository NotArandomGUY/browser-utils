{
  "compilerOptions": {
    "strict": true,
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "paths": {
      "@sh/*": [
        "./shared/*"
      ],
      "@ext/common/*": [
        "./extension/script/common/*"
      ],
      "@ext/custom/*": [
        "./extension/script/custom/*"
      ],
      "@ext/*": [
        "./extension/*"
      ],
      "@web/*": [
        "./webapp/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": "webpack",
      "rootDir": ".",
      "paths": {
        "@ext/common/*": [
          "../src/extension/script/common/*"
        ],
        "@ext/custom/*": [
          "../src/extension/script/custom/*"
        ],
        "@ext/*": [
          "../src/extension/*"
        ]
      }
    }
  }
}