{
  "compilerOptions": {
    "strict": true,
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "paths": {
      "@sh/*": [
        "./shared/*"
      ],
      "@ext/default/*": [
        "./extension/script/default/*"
      ],
      "@ext/site/*": [
        "./extension/script/site/*"
      ],
      "@ext/*": [
        "./extension/*"
      ],
      "@web/*": [
        "./webapp/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node"
    }
  }
}